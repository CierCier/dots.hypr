#!/usr/bin/env bash


script="$HOME/.config/ags/scripts/color_generation/switchwall.sh"

img_path=$(realpath "$1")

if [ -z "$img_path" ]; then
	echo "No image path provided"
	exit 1
fi

if [ ! -f "$img_path" ]; then
	echo "File not found: $img_path"
	exit 1
fi

if [ ! -x "$script" ]; then
	echo "Script not found or not executable: $script"
	exit 1
fi

$script "$img_path"
