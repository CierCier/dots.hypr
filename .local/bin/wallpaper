#!/usr/bin/env bash



img_path=$(realpath "$1")

if [ -z "$1" ]; then
	echo "No image path provided"
	exit 1
fi

if [ ! -f "$img_path" ]; then
	echo "File not found: $img_path"
	exit 1
fi


wal --cols16 -s -t  --backend haishoku -i "$img_path"

swww img --transition-duration 1    "$img_path"
~/.config/waybar/scripts/start-waybar

